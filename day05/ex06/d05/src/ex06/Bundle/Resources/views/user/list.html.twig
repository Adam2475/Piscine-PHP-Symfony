<h1>User List</h1>

{% if message %}
    <p style="color: green;">{{ message }}</p>
{% endif %}

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>ID</th><th>Username</th><th>Name</th><th>Email</th><th>Address</th><th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.address }}</td>
            <td>
                <a href="{{ path('ex06_edit', {'id': user.id}) }}">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="6">No users found.</td></tr>
    {% endfor %}
    </tbody>
</table>
