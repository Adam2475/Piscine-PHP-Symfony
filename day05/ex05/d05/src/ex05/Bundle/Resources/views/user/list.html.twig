<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
    <style>
        .flash-success { color: green; }
        .flash-error { color: red; }
    </style>
</head>
<body>
    <h1>User List (Ex05)</h1>

    {% for label, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="flash-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <table border="1">
        <thead>
            <tr>
                <th>ID</th><th>Username</th><th>Email</th><th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('ex05_user_delete', { id: user.id }) }}" onclick="return confirm('Delete this user?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4">No users found.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
